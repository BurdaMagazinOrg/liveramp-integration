{% include 'liveramp-integration-tag.html.twig' %}
{% if app_id %}
  <script type="text/javascript">
    let vendorIds = [];

    {% for id in vendor_ids %}
    vendorIds[{{ loop.index }}] = {"vendorId": {{ id }}};
    {% endfor %}

    setTimeout(function () {
      window.__tcfapi('checkConsent', null, function (data, success) {
      }, {
        data: vendorIds,
        recheckConsentOnChange: true,
        perVendor: true
      });
    }, 1000);
  </script>
{% endif %}
